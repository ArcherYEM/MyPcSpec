<body>

    <div class="d-grid gap-2 col-6 mx-auto" style="margin-top: 20px;">
        <button class="btn btn-primary" id="pcCheck" type="button">내 PC 장비 확인하기</button>
    </div>
    <div class="col-6 mx-auto mt-3">
        <p style="font-weight: bold; color: green;">[ CPU ]</p>
        <span id="cpuInfo"></span>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script>
        $('#pcCheck').click(function (event) {
            event.preventDefault();

            let cpuInfoDiv = $('#cpuInfo');
            cpuInfoDiv.html('확인중...');

            $.ajax({
                url: '/Spec/GetCPU',
                type: 'GET',
                success: function (data) {
                    let cpuInfoDiv = $('#cpuInfo');
                    cpuInfoDiv.empty();
                    if (data.length > 0) {
                        data.forEach(cpu => {
                            cpuInfoDiv.append(`<p>${cpu}</p>`);
                        });
                    } else {
                        cpuInfoDiv.append(`<p>CPU 정보 확인 불가 (관리자 문의 요망)</p>`);
                    }
                },
                error: function () {
                    $('#cpuInfo').html('<p>CPU 정보를 가져오는 중 오류가 발생했습니다.</p>');
                }
            });
        });
    </script>

</body>